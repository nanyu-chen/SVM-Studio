@model GalleryViewModel
@{
    ViewData["Title"] = "Gallery";
}

<!-- Hero Section -->
<section class="hero-section gallery-hero">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-12 text-center" data-aos="fade-up">
                <h1 class="hero-title">Our Gallery</h1>
                <p class="hero-subtitle">A collection of our finest work</p>
            </div>
        </div>
    </div>
</section>

<!-- Filter Section -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="filter-buttons text-center" data-aos="fade-up">
                    <button class="btn btn-outline-primary active" data-filter="*">All</button>
                    <button class="btn btn-outline-primary" data-filter="wedding">Wedding</button>
                    <button class="btn btn-outline-primary" data-filter="portrait">Portrait</button>
                    <button class="btn btn-outline-primary" data-filter="commercial">Commercial</button>
                    <button class="btn btn-outline-primary" data-filter="fashion">Fashion</button>
                    <button class="btn btn-outline-primary" data-filter="lifestyle">Lifestyle</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Gallery Section -->
<section class="py-5">
    <div class="container">
        <div class="row gallery-grid" id="gallery-grid">
            @if (Model?.PortfolioItems != null)
            {
                @foreach (var item in Model.PortfolioItems)
                {
                    <div class="col-lg-4 col-md-6 mb-4 gallery-item" data-category="@item.Category.ToLower()" data-aos="fade-up">
                        <div class="gallery-card">
                            <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid gallery-image" data-bs-toggle="modal" data-bs-target="#lightboxModal" data-image="@item.ImageUrl" data-title="@item.Title" data-description="@item.Description">
                            <div class="gallery-overlay">
                                <div class="gallery-content">
                                    <h5>@item.Title</h5>
                                    <p>@item.Category</p>
                                    <i class="fas fa-search-plus"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Sample Gallery Items -->
                <div class="col-lg-4 col-md-6 mb-4 gallery-item" data-category="wedding" data-aos="fade-up">
                    <div class="gallery-card">
                        <img src="~/images/gallery-1.jpg" alt="Elegant Wedding" class="img-fluid gallery-image" data-bs-toggle="modal" data-bs-target="#lightboxModal" data-image="~/images/gallery-1.jpg" data-title="Elegant Wedding" data-description="A beautiful outdoor wedding ceremony">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Elegant Wedding</h5>
                                <p>Wedding</p>
                                <i class="fas fa-search-plus"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 gallery-item" data-category="portrait" data-aos="fade-up" data-aos-delay="100">
                    <div class="gallery-card">
                        <img src="~/images/gallery-2.jpg" alt="Portrait Session" class="img-fluid gallery-image" data-bs-toggle="modal" data-bs-target="#lightboxModal" data-image="~/images/gallery-2.jpg" data-title="Portrait Session" data-description="Professional portrait photography">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Portrait Session</h5>
                                <p>Portrait</p>
                                <i class="fas fa-search-plus"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 gallery-item" data-category="commercial" data-aos="fade-up" data-aos-delay="200">
                    <div class="gallery-card">
                        <img src="~/images/gallery-3.jpg" alt="Commercial Shoot" class="img-fluid gallery-image" data-bs-toggle="modal" data-bs-target="#lightboxModal" data-image="~/images/gallery-3.jpg" data-title="Commercial Shoot" data-description="Brand photography for luxury products">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Commercial Shoot</h5>
                                <p>Commercial</p>
                                <i class="fas fa-search-plus"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 gallery-item" data-category="fashion" data-aos="fade-up" data-aos-delay="300">
                    <div class="gallery-card">
                        <img src="~/images/gallery-4.jpg" alt="Fashion Editorial" class="img-fluid gallery-image" data-bs-toggle="modal" data-bs-target="#lightboxModal" data-image="~/images/gallery-4.jpg" data-title="Fashion Editorial" data-description="High-end fashion photography">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Fashion Editorial</h5>
                                <p>Fashion</p>
                                <i class="fas fa-search-plus"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 gallery-item" data-category="lifestyle" data-aos="fade-up" data-aos-delay="400">
                    <div class="gallery-card">
                        <img src="~/images/gallery-5.jpg" alt="Lifestyle Session" class="img-fluid gallery-image" data-bs-toggle="modal" data-bs-target="#lightboxModal" data-image="~/images/gallery-5.jpg" data-title="Lifestyle Session" data-description="Natural lifestyle photography">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Lifestyle Session</h5>
                                <p>Lifestyle</p>
                                <i class="fas fa-search-plus"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 gallery-item" data-category="wedding" data-aos="fade-up" data-aos-delay="500">
                    <div class="gallery-card">
                        <img src="~/images/gallery-6.jpg" alt="Wedding Details" class="img-fluid gallery-image" data-bs-toggle="modal" data-bs-target="#lightboxModal" data-image="~/images/gallery-6.jpg" data-title="Wedding Details" data-description="Beautiful wedding detail photography">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Wedding Details</h5>
                                <p>Wedding</p>
                                <i class="fas fa-search-plus"></i>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Load More Button -->
        <div class="row">
            <div class="col-lg-12 text-center mt-4" data-aos="fade-up">
                <button class="btn btn-outline-primary btn-lg" id="load-more-btn">Load More</button>
            </div>
        </div>
    </div>
</section>

<!-- Lightbox Modal -->
<div class="modal fade" id="lightboxModal" tabindex="-1" aria-labelledby="lightboxModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <img id="lightbox-image" src="" alt="" class="img-fluid w-100">
                <div class="p-4">
                    <h5 id="lightbox-title"></h5>
                    <p id="lightbox-description" class="text-muted"></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8" data-aos="fade-up">
                <h2 class="mb-4">Love What You See?</h2>
                <p class="lead mb-4">
                    Let's create something beautiful together. Book your session today.
                </p>
                <a href="/Home/Contact" class="btn btn-light btn-lg">Book Now</a>
            </div>
        </div>
    </div>
</section>
