@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<!-- Hero Section -->
<section class="hero-section contact-hero">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-12 text-center" data-aos="fade-up">
                <h1 class="hero-title">Get in Touch</h1>
                <p class="hero-subtitle">Let's create something beautiful together</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5" data-aos="fade-up">
                <div class="contact-form-container">
                    <h2 class="section-title mb-4">Send us a <span class="text-accent">Message</span></h2>
                    <form asp-action="Contact" method="post" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Full Name *</label>
                                <input asp-for="Name" type="text" class="form-control" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <div class="invalid-feedback">
                                    Please provide your full name.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email Address *</label>
                                <input asp-for="Email" type="email" class="form-control" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="invalid-feedback">
                                    Please provide a valid email address.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">Phone Number</label>
                                <input asp-for="Phone" type="tel" class="form-control">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ServiceType" class="form-label">Service Type *</label>
                                <select asp-for="ServiceType" class="form-select" required>
                                    <option value="">Select a service...</option>
                                    <option value="Wedding">Wedding Photography</option>
                                    <option value="Portrait">Portrait Session</option>
                                    <option value="Commercial">Commercial Photography</option>
                                    <option value="Fashion">Fashion & Editorial</option>
                                    <option value="Lifestyle">Lifestyle Photography</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="ServiceType" class="text-danger"></span>
                                <div class="invalid-feedback">
                                    Please select a service type.
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EventDate" class="form-label">Event Date</label>
                            <input asp-for="EventDate" type="date" class="form-control">
                            <span asp-validation-for="EventDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">Message *</label>
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Tell us about your vision, location, and any specific requirements..." required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please tell us about your project.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="contact-info">
                    <h3 class="mb-4">Contact Information</h3>
                    <div class="contact-item mb-4">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-details">
                            <h5>Studio Location</h5>
                            <p>123 Creative Boulevard<br>
                            Arts District, CA 90210</p>
                        </div>
                    </div>
                    <div class="contact-item mb-4">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-details">
                            <h5>Phone</h5>
                            <p><a href="tel:+1234567890">(123) 456-7890</a></p>
                        </div>
                    </div>
                    <div class="contact-item mb-4">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-details">
                            <h5>Email</h5>
                            <p><a href="mailto:hello@svmstudio.com">hello@svmstudio.com</a></p>
                        </div>
                    </div>
                    <div class="contact-item mb-4">
                        <div class="contact-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="contact-details">
                            <h5>Studio Hours</h5>
                            <p>Monday - Friday: 9:00 AM - 6:00 PM<br>
                            Saturday: 10:00 AM - 4:00 PM<br>
                            Sunday: By appointment only</p>
                        </div>
                    </div>
                    <div class="social-links">
                        <h5 class="mb-3">Follow Us</h5>
                        <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-pinterest"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" data-aos="fade-up">
                <h2 class="section-title text-center mb-4">Find Our <span class="text-ethereal">Studio</span></h2>
                <div class="map-container">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3304.8730073249965!2d-118.2533687!3d34.0469058!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2c75ddc27da13%3A0xe22fdf6f254608f4!2sLos%20Angeles%2C%20CA%2C%20USA!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="section faq-section" style="background: var(--gradient-dreamy); position: relative; overflow: hidden;" data-aos="fade-up">
    <div class="texture-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5" data-aos="fade-up">
                <div class="faq-icon mb-4">
                    <i class="fas fa-question-circle fa-3x text-white" style="opacity: 0.8;"></i>
                </div>
                <h2 class="text-white mb-3" style="font-size: 2.5rem; font-weight: 300;">Frequently Asked <span class="text-accent">Questions</span></h2>
                <p class="lead text-white" style="font-size: 1.2rem; opacity: 0.9;">Everything you need to know about working with SVM Studio</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="accordion faq-accordion" id="faqAccordion">
                    <div class="accordion-item faq-item" data-aos="fade-up" style="background: rgba(255, 255, 255, 0.1); border: none; border-radius: 15px; margin-bottom: 1rem; backdrop-filter: blur(10px);">
                        <h2 class="accordion-header" id="faq1">
                            <button class="accordion-button faq-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1" style="background: transparent; border: none; color: white; padding: 1.5rem; font-weight: 500; border-radius: 15px;">
                                <i class="fas fa-calendar-alt me-3 text-accent"></i>
                                How far in advance should I book?
                            </button>
                        </h2>
                        <div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="faq1" data-bs-parent="#faqAccordion">
                            <div class="accordion-body faq-body" style="color: rgba(255, 255, 255, 0.9); padding: 0 1.5rem 1.5rem 1.5rem; line-height: 1.7;">
                                We recommend booking 6-12 months in advance for weddings and 2-4 weeks for portrait sessions. This ensures we can secure your preferred date and allows time for proper planning.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item faq-item" data-aos="fade-up" data-aos-delay="100" style="background: rgba(255, 255, 255, 0.1); border: none; border-radius: 15px; margin-bottom: 1rem; backdrop-filter: blur(10px);">
                        <h2 class="accordion-header" id="faq2">
                            <button class="accordion-button faq-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2" style="background: transparent; border: none; color: white; padding: 1.5rem; font-weight: 500; border-radius: 15px;">
                                <i class="fas fa-gift me-3 text-accent"></i>
                                What's included in the packages?
                            </button>
                        </h2>
                        <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="faq2" data-bs-parent="#faqAccordion">
                            <div class="accordion-body faq-body" style="color: rgba(255, 255, 255, 0.9); padding: 0 1.5rem 1.5rem 1.5rem; line-height: 1.7;">
                                All packages include professional photography, editing, and digital gallery delivery. Specific inclusions vary by package - please see our Services page for detailed information.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item faq-item" data-aos="fade-up" data-aos-delay="200" style="background: rgba(255, 255, 255, 0.1); border: none; border-radius: 15px; margin-bottom: 1rem; backdrop-filter: blur(10px);">
                        <h2 class="accordion-header" id="faq3">
                            <button class="accordion-button faq-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3" style="background: transparent; border: none; color: white; padding: 1.5rem; font-weight: 500; border-radius: 15px;">
                                <i class="fas fa-plane me-3 text-accent"></i>
                                Do you travel for shoots?
                            </button>
                        </h2>
                        <div id="collapse3" class="accordion-collapse collapse" aria-labelledby="faq3" data-bs-parent="#faqAccordion">
                            <div class="accordion-body faq-body" style="color: rgba(255, 255, 255, 0.9); padding: 0 1.5rem 1.5rem 1.5rem; line-height: 1.7;">
                                Yes! We love to travel and are available for destination weddings and shoots. Travel fees may apply depending on the location and duration of the trip.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item faq-item" data-aos="fade-up" data-aos-delay="300" style="background: rgba(255, 255, 255, 0.1); border: none; border-radius: 15px; margin-bottom: 1rem; backdrop-filter: blur(10px);">
                        <h2 class="accordion-header" id="faq4">
                            <button class="accordion-button faq-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse4" aria-expanded="false" aria-controls="collapse4" style="background: transparent; border: none; color: white; padding: 1.5rem; font-weight: 500; border-radius: 15px;">
                                <i class="fas fa-clock me-3 text-accent"></i>
                                How long until I receive my photos?
                            </button>
                        </h2>
                        <div id="collapse4" class="accordion-collapse collapse" aria-labelledby="faq4" data-bs-parent="#faqAccordion">
                            <div class="accordion-body faq-body" style="color: rgba(255, 255, 255, 0.9); padding: 0 1.5rem 1.5rem 1.5rem; line-height: 1.7;">
                                Portrait sessions are typically delivered within 1-2 weeks, while wedding galleries take 4-6 weeks. We'll provide a sneak peek within 48 hours of your session.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
