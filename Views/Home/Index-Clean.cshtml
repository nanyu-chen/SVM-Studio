@model SVMStudio.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-background" style="background-image: url('https://images.unsplash.com/photo-1554048612-b6eb8490bd7e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');">
        <div class="hero-overlay"></div>
    </div>
    <div class="hero-content">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="hero-title">Where Vision Meets Art</h1>
                    <p class="hero-subtitle">Creating timeless imagery through the perfect blend of photography and styling</p>
                    <div class="hero-buttons">
                        <a asp-controller="Home" asp-action="Gallery" class="btn btn-primary me-3">View Our Work</a>
                        <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary">Our Story</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Portfolio Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="section-title">Featured Work</h2>
                <p class="section-subtitle">Discover our latest photography and styling projects</p>
            </div>
        </div>
        
        @if (Model.FeaturedPortfolios != null && Model.FeaturedPortfolios.Any())
        {
            <div class="row">
                @foreach (var portfolio in Model.FeaturedPortfolios.Take(6))
                {
                    <div class="col-md-4 mb-4">
                        <div class="gallery-item">
                            <div class="gallery-image">
                                <img src="@portfolio.ImageUrl" alt="@portfolio.Title" class="img-fluid">
                                <div class="gallery-overlay">
                                    <div class="gallery-content">
                                        <h4>@portfolio.Title</h4>
                                        <p>@portfolio.Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="gallery-item">
                        <div class="gallery-image">
                            <img src="https://images.unsplash.com/photo-1469334031218-e382a71b716b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Portrait Session" class="img-fluid">
                            <div class="gallery-overlay">
                                <div class="gallery-content">
                                    <h4>Portrait Session</h4>
                                    <p>Elegant portrait photography</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="gallery-item">
                        <div class="gallery-image">
                            <img src="https://images.unsplash.com/photo-1511285560929-80b456fea0bc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Wedding Photography" class="img-fluid">
                            <div class="gallery-overlay">
                                <div class="gallery-content">
                                    <h4>Wedding Photography</h4>
                                    <p>Capturing love stories</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="gallery-item">
                        <div class="gallery-image">
                            <img src="https://images.unsplash.com/photo-1542038784456-1ea8e935640e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Fashion Photography" class="img-fluid">
                            <div class="gallery-overlay">
                                <div class="gallery-content">
                                    <h4>Fashion Photography</h4>
                                    <p>Style and elegance</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <div class="row">
            <div class="col-12 text-center mt-4">
                <a asp-controller="Home" asp-action="Gallery" class="btn btn-outline-primary">View All Work</a>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="section-title">Our Services</h2>
                <p class="section-subtitle">Professional photography and styling services</p>
            </div>
        </div>
        
        <div class="row">
            @if (Model.Services != null && Model.Services.Any())
            {
                @foreach (var service in Model.Services.Take(4))
                {
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="service-card">
                            <div class="service-icon">
                                <i class="fas fa-camera"></i>
                            </div>
                            <h4>@service.Name</h4>
                            <p>@service.Description</p>
                            <div class="service-price">
                                <span class="price">@service.Price.ToString("C")</span>
                            </div>
                            <a asp-controller="Home" asp-action="Services" class="btn btn-outline-primary btn-sm">Learn More</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas fa-camera"></i>
                        </div>
                        <h4>Portrait Photography</h4>
                        <p>Professional portrait sessions for individuals and families</p>
                        <div class="service-price">
                            <span class="price">From $300</span>
                        </div>
                        <a asp-controller="Home" asp-action="Services" class="btn btn-outline-primary btn-sm">Learn More</a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h4>Wedding Photography</h4>
                        <p>Capturing your special day with elegance and style</p>
                        <div class="service-price">
                            <span class="price">From $1200</span>
                        </div>
                        <a asp-controller="Home" asp-action="Services" class="btn btn-outline-primary btn-sm">Learn More</a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <h4>Commercial Photography</h4>
                        <p>Professional images for your business needs</p>
                        <div class="service-price">
                            <span class="price">From $500</span>
                        </div>
                        <a asp-controller="Home" asp-action="Services" class="btn btn-outline-primary btn-sm">Learn More</a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <h4>Event Photography</h4>
                        <p>Documenting your special events and celebrations</p>
                        <div class="service-price">
                            <span class="price">From $400</span>
                        </div>
                        <a asp-controller="Home" asp-action="Services" class="btn btn-outline-primary btn-sm">Learn More</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- About Preview Section -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4">
                <h2 class="section-title">About SVM Studio</h2>
                <p>We are passionate photographers and stylists dedicated to creating timeless, elegant imagery that tells your unique story.</p>
                <p>Our approach combines technical expertise with artistic vision to deliver photographs that capture not just moments, but emotions and memories that last a lifetime.</p>
                <a asp-controller="Home" asp-action="About" class="btn btn-primary">Learn More About Us</a>
            </div>
            <div class="col-lg-6">
                <div class="about-image">
                    <img src="https://images.unsplash.com/photo-1554048612-b6eb8490bd7e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="About SVM Studio" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2>Ready to Create Something Beautiful?</h2>
                <p class="lead">Let's work together to capture your vision and bring it to life through stunning photography.</p>
                <a asp-controller="Home" asp-action="Booking" class="btn btn-light btn-lg">Book Your Session</a>
            </div>
        </div>
    </div>
</section>
