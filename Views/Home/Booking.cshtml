@model BookingViewModel
@{
    ViewData["Title"] = "Book a Session";
}

<!-- Hero Section -->
<section class="hero-section booking-hero">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-12 text-center" data-aos="fade-up">
                <h1 class="hero-title">Book Your Session</h1>
                <p class="hero-subtitle">Let's bring your vision to life</p>
            </div>
        </div>
    </div>
</section>

<!-- Booking Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="booking-form-container" data-aos="fade-up">
                    <h2 class="section-title text-center mb-4">Session Details</h2>
                    <form asp-action="Booking" method="post" class="needs-validation" novalidate>
                        <!-- Personal Information -->
                        <div class="form-section mb-5">
                            <h4 class="form-section-title">Personal Information</h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Name" class="form-label">Full Name *</label>
                                    <input asp-for="Name" type="text" class="form-control" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label">Email Address *</label>
                                    <input asp-for="Email" type="email" class="form-control" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Phone" class="form-label">Phone Number *</label>
                                    <input asp-for="Phone" type="tel" class="form-control" required>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="InstagramHandle" class="form-label">Instagram Handle</label>
                                    <input asp-for="InstagramHandle" type="text" class="form-control" placeholder="@@yourusername">
                                    <span asp-validation-for="InstagramHandle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Session Details -->
                        <div class="form-section mb-5">
                            <h4 class="form-section-title">Session Details</h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ServiceType" class="form-label">Service Type *</label>
                                    <select asp-for="ServiceType" class="form-select" required>
                                        <option value="">Select a service...</option>
                                        <option value="Wedding">Wedding Photography</option>
                                        <option value="Portrait">Portrait Session</option>
                                        <option value="Commercial">Commercial Photography</option>
                                        <option value="Fashion">Fashion & Editorial</option>
                                        <option value="Lifestyle">Lifestyle Photography</option>
                                        <option value="Engagement">Engagement Session</option>
                                        <option value="Family">Family Photography</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="ServiceType" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="PreferredDate" class="form-label">Preferred Date *</label>
                                    <input asp-for="PreferredDate" type="date" class="form-control" required>
                                    <span asp-validation-for="PreferredDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="PreferredTime" class="form-label">Preferred Time</label>
                                    <select asp-for="PreferredTime" class="form-select">
                                        <option value="">Select time...</option>
                                        <option value="Morning">Morning (9:00 AM - 12:00 PM)</option>
                                        <option value="Afternoon">Afternoon (12:00 PM - 5:00 PM)</option>
                                        <option value="Evening">Evening (5:00 PM - 8:00 PM)</option>
                                        <option value="Golden Hour">Golden Hour (1 hour before sunset)</option>
                                    </select>
                                    <span asp-validation-for="PreferredTime" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Duration" class="form-label">Session Duration</label>
                                    <select asp-for="Duration" class="form-select">
                                        <option value="">Select duration...</option>
                                        <option value="1 hour">1 hour</option>
                                        <option value="2 hours">2 hours</option>
                                        <option value="3 hours">3 hours</option>
                                        <option value="4 hours">4 hours</option>
                                        <option value="Full day">Full day</option>
                                        <option value="Multi-day">Multi-day</option>
                                    </select>
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Location" class="form-label">Preferred Location</label>
                                <input asp-for="Location" type="text" class="form-control" placeholder="Studio, outdoor location, venue name, etc.">
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Event Details (for weddings) -->
                        <div class="form-section mb-5" id="wedding-details" style="display: none;">
                            <h4 class="form-section-title">Event Details</h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="EventDate" class="form-label">Event Date</label>
                                    <input asp-for="EventDate" type="date" class="form-control">
                                    <span asp-validation-for="EventDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="GuestCount" class="form-label">Guest Count</label>
                                    <input asp-for="GuestCount" type="number" class="form-control" min="1">
                                    <span asp-validation-for="GuestCount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="VenueDetails" class="form-label">Venue Details</label>
                                <textarea asp-for="VenueDetails" class="form-control" rows="3" placeholder="Venue name, address, and any special details..."></textarea>
                                <span asp-validation-for="VenueDetails" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Budget and Package -->
                        <div class="form-section mb-5">
                            <h4 class="form-section-title">Budget & Package</h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Budget" class="form-label">Budget Range</label>
                                    <select asp-for="Budget" class="form-select">
                                        <option value="">Select budget range...</option>
                                        <option value="Under $500">Under $500</option>
                                        <option value="$500 - $1,000">$500 - $1,000</option>
                                        <option value="$1,000 - $2,500">$1,000 - $2,500</option>
                                        <option value="$2,500 - $5,000">$2,500 - $5,000</option>
                                        <option value="Over $5,000">Over $5,000</option>
                                    </select>
                                    <span asp-validation-for="Budget" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Package Interest</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Album" id="package-album">
                                        <label class="form-check-label" for="package-album">Photo Album</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Prints" id="package-prints">
                                        <label class="form-check-label" for="package-prints">Professional Prints</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Styling" id="package-styling">
                                        <label class="form-check-label" for="package-styling">Styling Services</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vision and Details -->
                        <div class="form-section mb-5">
                            <h4 class="form-section-title">Your Vision</h4>
                            <div class="mb-3">
                                <label asp-for="VisionDescription" class="form-label">Describe Your Vision *</label>
                                <textarea asp-for="VisionDescription" class="form-control" rows="4" placeholder="Tell us about your vision, style preferences, must-have shots, inspiration, etc." required></textarea>
                                <span asp-validation-for="VisionDescription" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SpecialRequests" class="form-label">Special Requests or Requirements</label>
                                <textarea asp-for="SpecialRequests" class="form-control" rows="3" placeholder="Any special considerations, accessibility needs, or specific requests..."></textarea>
                                <span asp-validation-for="SpecialRequests" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- How did you hear about us -->
                        <div class="form-section mb-5">
                            <h4 class="form-section-title">How Did You Hear About Us?</h4>
                            <div class="mb-3">
                                <select asp-for="ReferralSource" class="form-select">
                                    <option value="">Select an option...</option>
                                    <option value="Instagram">Instagram</option>
                                    <option value="Facebook">Facebook</option>
                                    <option value="Google Search">Google Search</option>
                                    <option value="Website">Website</option>
                                    <option value="Friend/Family">Friend/Family Referral</option>
                                    <option value="Wedding Planner">Wedding Planner</option>
                                    <option value="Venue">Venue Recommendation</option>
                                    <option value="Previous Client">Previous Client</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="ReferralSource" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Terms and Submit -->
                        <div class="form-section">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="terms-agreement" required>
                                    <label class="form-check-label" for="terms-agreement">
                                        I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms of Service</a> and <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal">Privacy Policy</a> *
                                    </label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="marketing-consent">
                                    <label class="form-check-label" for="marketing-consent">
                                        I would like to receive updates about new services and photography tips
                                    </label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Submit Booking Request</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- What Happens Next Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5" data-aos="fade-up">
                <h2 class="section-title">What Happens Next?</h2>
                <p class="section-subtitle">Your journey with us</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="next-step text-center">
                    <div class="step-icon mb-3">
                        <i class="fas fa-paper-plane fa-3x text-primary"></i>
                    </div>
                    <h4>1. Submit Your Request</h4>
                    <p>Fill out the form above with your details and vision. We'll receive your request immediately.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="next-step text-center">
                    <div class="step-icon mb-3">
                        <i class="fas fa-phone fa-3x text-primary"></i>
                    </div>
                    <h4>2. We'll Contact You</h4>
                    <p>Within 24 hours, we'll reach out to discuss your project and schedule a consultation.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="next-step text-center">
                    <div class="step-icon mb-3">
                        <i class="fas fa-handshake fa-3x text-primary"></i>
                    </div>
                    <h4>3. Let's Create Magic</h4>
                    <p>Once booked, we'll work together to plan every detail and create beautiful memories.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Terms Modal -->
<div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="termsModalLabel">Terms of Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Photography Services Agreement</h6>
                <p>By booking a session with SVM Studio, you agree to the following terms...</p>
                <!-- Add full terms content here -->
            </div>
        </div>
    </div>
</div>

<!-- Privacy Modal -->
<div class="modal fade" id="privacyModal" tabindex="-1" aria-labelledby="privacyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="privacyModalLabel">Privacy Policy</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Privacy Policy</h6>
                <p>We are committed to protecting your privacy. This policy explains how we collect and use your information...</p>
                <!-- Add full privacy policy content here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show/hide wedding details based on service type
        document.getElementById('ServiceType').addEventListener('change', function() {
            const weddingDetails = document.getElementById('wedding-details');
            if (this.value === 'Wedding') {
                weddingDetails.style.display = 'block';
            } else {
                weddingDetails.style.display = 'none';
            }
        });
    </script>
}
