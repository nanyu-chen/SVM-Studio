@model SVMStudio.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="luxury-hero-section">
    <div class="hero-canvas" id="heroCanvas"></div>
    <div class="hero-particles"></div>
    <div class="hero-background" style="background-image: url('https://images.unsplash.com/photo-1554048612-b6eb8490bd7e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');">
        <div class="hero-overlay"></div>
        <div class="hero-grain"></div>
    </div>
    <div class="hero-content" data-aos="fade-up">
        <div class="hero-text-container">
            <h1 class="hero-title">
                <span class="hero-line">Where Vision</span>
                <span class="hero-line hero-highlight">Meets Art</span>
            </h1>
            <p class="hero-subtitle">Creating timeless imagery through the perfect blend of photography and styling</p>
            <div class="hero-buttons">
                <a asp-controller="Home" asp-action="Gallery" class="hero-cta primary-cta">
                    <span class="btn-text">View Our Work</span>
                    <div class="btn-bg"></div>
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a asp-controller="Home" asp-action="About" class="hero-cta secondary-cta">
                    <span class="btn-text">Our Story</span>
                    <div class="btn-bg"></div>
                </a>
            </div>
        </div>
    </div>
    <div class="hero-scroll-indicator">
        <div class="scroll-mouse">
            <div class="scroll-wheel"></div>
        </div>
        <span class="scroll-text">Scroll to explore</span>
    </div>
</section>

<!-- Featured Portfolio Section -->
<section class="luxury-section">
    <div class="container">
        <div class="section-header" data-aos="fade-up">
            <h2 class="section-title">
                <span class="title-line">Featured</span>
                <span class="title-highlight">Work</span>
            </h2>
            <p class="section-subtitle">
                A curated selection of our most captivating visual stories
            </p>
        </div>
        
        <div class="luxury-gallery-grid" data-aos="fade-up" data-aos-delay="200">
            @if (Model.FeaturedPortfolios.Any())
            {
                @foreach (var portfolio in Model.FeaturedPortfolios)
                {
                    <div class="luxury-gallery-item" data-aos="fade-up" data-aos-delay="@(Model.FeaturedPortfolios.IndexOf(portfolio) * 100)">
                        <div class="gallery-card">
                            <div class="card-image-container">
                                <img src="@portfolio.ImageUrl" alt="@portfolio.Title" class="gallery-image">
                                <div class="image-overlay">
                                    <div class="overlay-content">
                                        <h3 class="gallery-title">@portfolio.Title</h3>
                                        <p class="gallery-category">@portfolio.Category</p>
                                        <div class="gallery-actions">
                                            <button class="gallery-btn view-btn" data-lightbox="gallery" data-src="@portfolio.ImageUrl">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="gallery-btn info-btn">
                                                <i class="fas fa-info-circle"></i>
