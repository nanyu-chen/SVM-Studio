                                        <button class="gallery-btn view-btn" data-lightbox="gallery" data-src="https://images.unsplash.com/photo-1541854425-abedb6c8e0a8?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="gallery-btn info-btn">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="luxury-gallery-item" data-aos="fade-up" data-aos-delay="300">
                    <div class="gallery-card">
                        <div class="card-image-container">
                            <img src="https://images.unsplash.com/photo-1562572159-4efc207f5aff?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Portrait" class="gallery-image">
