<!-- Services Section -->
<section class="luxury-section services-section">
    <div class="section-bg-texture"></div>
    <div class="container">
        <div class="section-header" data-aos="fade-up">
            <h2 class="section-title">
                <span class="title-line">Our</span>
                <span class="title-highlight">Services</span>
            </h2>
            <p class="section-subtitle">
                Comprehensive photography and styling services tailored to your vision
            </p>
        </div>
        
        <div class="luxury-services-grid">
            @if (Model.Services.Any())
            {
                @foreach (var service in Model.Services)
                {
                    <div class="luxury-service-card" data-aos="fade-up" data-aos-delay="@(Model.Services.IndexOf(service) * 100)">
                        <div class="service-card-inner">
                            <div class="service-image-container">
                                @if (!string.IsNullOrEmpty(service.IconUrl))
                                {
                                    <img src="@service.IconUrl" alt="@service.Name" class="service-image">
                                }
                                <div class="service-overlay">
                                    <div class="service-icon">
                                        <i class="fas fa-camera"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="service-content">
                                <h3 class="service-title">@service.Name</h3>
                                <p class="service-description">@service.Description</p>
                                <div class="service-footer">
                                    <div class="service-price">
                                        <span class="price-label">Starting at</span>
                                        <span class="price-amount">$@service.Price</span>
