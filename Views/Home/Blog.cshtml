                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="section newsletter-section" style="background: var(--gradient-dreamy); position: relative; overflow: hidden;" data-aos="fade-up">
    <div class="texture-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center" data-aos="fade-up">
                <div class="newsletter-icon mb-4">
                    <i class="fas fa-paper-plane fa-3x text-white" style="opacity: 0.8;"></i>
                </div>
                <h2 class="text-white mb-3" style="font-size: 2.5rem; font-weight: 300;">Stay <span class="text-accent">Inspired</span></h2>
                <p class="lead text-white mb-4" style="font-size: 1.2rem; opacity: 0.9;">Join our creative community and receive exclusive photography tips, behind-the-scenes content, and first access to our latest work</p>
                <form class="newsletter-form" style="max-width: 500px; margin: 0 auto;">
                    <div class="input-group newsletter-input-group">
                        <input type="email" class="form-control newsletter-input" placeholder="Enter your email address" required style="border: none; background: rgba(255, 255, 255, 0.1); color: white; padding: 1rem 1.5rem; border-radius: 50px 0 0 50px; backdrop-filter: blur(10px);">
                        <button class="btn btn-newsletter" type="submit" style="border: none; background: rgba(255, 255, 255, 0.2); color: white; padding: 1rem 2rem; border-radius: 0 50px 50px 0; backdrop-filter: blur(10px); font-weight: 500; transition: all 0.3s ease;">
                            <i class="fas fa-arrow-right me-2"></i>Subscribe
                        </button>
                    </div>
                </form>
                <div class="newsletter-benefits mt-4">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-lightbulb text-accent mb-2"></i>
                            <p class="text-white small mb-0" style="opacity: 0.8;">Creative Tips</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-eye text-accent mb-2"></i>
                            <p class="text-white small mb-0" style="opacity: 0.8;">Behind the Scenes</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-star text-accent mb-2"></i>
                            <p class="text-white small mb-0" style="opacity: 0.8;">Latest Work</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

