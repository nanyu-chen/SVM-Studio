                                <div class="blog-category">@post.Category</div>
                            </div>
                            <div class="blog-content p-4">
                                <h3 class="blog-title">
                                    <a href="/Home/BlogPost/@post.Id">@post.Title</a>
                                </h3>
                                <p class="blog-excerpt">@post.Excerpt</p>
                                <div class="blog-meta">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-alt"></i> @post.PublishedDate.ToString("MMM dd, yyyy")
