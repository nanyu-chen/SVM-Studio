@model ServicesViewModel
@{
    ViewData["Title"] = "Services";
}

<!-- Hero Section -->
<section class="hero-section services-hero">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-12 text-center" data-aos="fade-up">
                <h1 class="hero-title">Our Services</h1>
                <p class="hero-subtitle">Capturing life's precious moments with artistry and elegance</p>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            @if (Model?.Services != null && Model.Services.Any())
            {
                @foreach (var service in Model.Services)
                {
                    <div class="col-lg-6 mb-5" data-aos="fade-up">
                        <div class="service-card dreamy-glass">
                            <div class="row no-gutters">
                                <div class="col-md-6">
                                    <div class="service-image">
                                        <img src="@service.ImageUrl" alt="@service.Name" class="img-fluid h-100 w-100">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="service-content p-4">
                                        <div class="service-icon dreamy-icon mb-3">
                                            <i class="@service.Icon"></i>
                                        </div>
                                        <h3 class="service-title">@service.Name</h3>
                                        <p class="service-description">@service.Description</p>
                                        <div class="service-price">
                                            <span class="price-label">Starting at</span>
                                            <span class="price">$@service.Price</span>
                                        </div>
                                        <a href="/Home/Contact" class="btn btn-primary mt-3">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Sample Services -->
                <div class="col-lg-6 mb-5" data-aos="fade-up">
                    <div class="service-card dreamy-glass">
                        <div class="row no-gutters">
                            <div class="col-md-6">
                                <div class="service-image">
                                    <img src="~/images/service-wedding.jpg" alt="Wedding Photography" class="img-fluid h-100 w-100">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="service-content p-4">
                                    <div class="service-icon dreamy-icon mb-3">
                                        <i class="fas fa-heart"></i>
                                    </div>
                                    <h3 class="service-title">Wedding Photography</h3>
                                    <p class="service-description">Complete wedding day coverage with an elegant, timeless style. Includes engagement session, full day coverage, and edited gallery.</p>
                                    <div class="service-price">
                                        <span class="price-label">Starting at</span>
                                        <span class="price">$2,500</span>
                                    </div>
                                    <a href="/Home/Contact" class="btn btn-primary mt-3">Book Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-5" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-card dreamy-glass">
                        <div class="row no-gutters">
                            <div class="col-md-6">
                                <div class="service-image">
                                    <img src="~/images/service-portrait.jpg" alt="Portrait Sessions" class="img-fluid h-100 w-100">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="service-content p-4">
                                    <div class="service-icon dreamy-icon mb-3">
                                        <i class="fas fa-user-astronaut"></i>
                                    </div>
                                    <h3 class="service-title">Portrait Sessions</h3>
                                    <p class="service-description">Professional portraits for individuals, couples, and families. Perfect for headshots, family photos, and special occasions.</p>
                                    <div class="service-price">
                                        <span class="price-label">Starting at</span>
                                        <span class="price">$350</span>
                                    </div>
                                    <a href="/Home/Contact" class="btn btn-primary mt-3">Book Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-5" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-card dreamy-glass">
                        <div class="row no-gutters">
                            <div class="col-md-6">
                                <div class="service-image">
                                    <img src="~/images/service-commercial.jpg" alt="Commercial Photography" class="img-fluid h-100 w-100">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="service-content p-4">
                                    <div class="service-icon dreamy-icon mb-3">
                                        <i class="fas fa-briefcase"></i>
                                    </div>
                                    <h3 class="service-title">Commercial Photography</h3>
                                    <p class="service-description">Brand photography for businesses, products, and marketing materials. Professional quality images that tell your brand story.</p>
                                    <div class="service-price">
                                        <span class="price-label">Starting at</span>
                                        <span class="price">$500</span>
                                    </div>
                                    <a href="/Home/Contact" class="btn btn-primary mt-3">Book Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-5" data-aos="fade-up" data-aos-delay="300">
                    <div class="service-card dreamy-glass">
                        <div class="row no-gutters">
                            <div class="col-md-6">
                                <div class="service-image">
                                    <img src="~/images/service-fashion.jpg" alt="Fashion & Editorial" class="img-fluid h-100 w-100">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="service-content p-4">
                                    <div class="service-icon dreamy-icon mb-3">
                                        <i class="fas fa-crown"></i>
                                    </div>
                                    <h3 class="service-title">Fashion & Editorial</h3>
                                    <p class="service-description">High-end fashion photography for designers, models, and publications. Creative direction and styling included.</p>
                                    <div class="service-price">
                                        <span class="price-label">Starting at</span>
                                        <span class="price">$750</span>
                                    </div>
                                    <a href="/Home/Contact" class="btn btn-primary mt-3">Book Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Process Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5" data-aos="fade-up">
                <h2 class="section-title">Our Process</h2>
                <p class="section-subtitle">How we create magic together</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="process-step text-center">
                    <div class="process-icon mb-3">
                        <div class="icon-circle">
                            <i class="fas fa-comments fa-2x"></i>
                        </div>
                        <div class="step-number">1</div>
                    </div>
                    <h4>Consultation</h4>
                    <p>We discuss your vision, preferences, and requirements to create the perfect plan.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="process-step text-center">
                    <div class="process-icon mb-3">
                        <div class="icon-circle">
                            <i class="fas fa-palette fa-2x"></i>
                        </div>
                        <div class="step-number">2</div>
                    </div>
                    <h4>Planning</h4>
                    <p>Our team plans every detail, from location to styling, ensuring nothing is left to chance.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="process-step text-center">
                    <div class="process-icon mb-3">
                        <div class="icon-circle">
                            <i class="fas fa-camera fa-2x"></i>
                        </div>
                        <div class="step-number">3</div>
                    </div>
                    <h4>Photography</h4>
                    <p>The magic happens! We capture beautiful moments with our signature style and attention to detail.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-delay="400">
                <div class="process-step text-center">
                    <div class="process-icon mb-3">
                        <div class="icon-circle">
                            <i class="fas fa-magic fa-2x"></i>
                        </div>
                        <div class="step-number">4</div>
                    </div>
                    <h4>Delivery</h4>
                    <p>We carefully edit and deliver your stunning images in a beautiful online gallery.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Packages Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5" data-aos="fade-up">
                <h2 class="section-title">Wedding Packages</h2>
                <p class="section-subtitle">Tailored packages for your special day</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="package-card h-100">
                    <div class="package-header">
                        <h3>Essential</h3>
                        <div class="package-price">$2,500</div>
                    </div>
                    <div class="package-body">
                        <ul class="package-features">
                            <li><i class="fas fa-check"></i> 6 hours coverage</li>
                            <li><i class="fas fa-check"></i> 1 photographer</li>
                            <li><i class="fas fa-check"></i> 300+ edited images</li>
                            <li><i class="fas fa-check"></i> Online gallery</li>
                            <li><i class="fas fa-check"></i> USB drive</li>
                        </ul>
                        <a href="/Home/Contact" class="btn btn-outline-primary w-100">Choose Package</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="package-card h-100 featured">
                    <div class="package-header">
                        <h3>Premium</h3>
                        <div class="package-price">$3,500</div>
                        <span class="badge badge-primary">Most Popular</span>
                    </div>
                    <div class="package-body">
                        <ul class="package-features">
                            <li><i class="fas fa-check"></i> 8 hours coverage</li>
                            <li><i class="fas fa-check"></i> 2 photographers</li>
                            <li><i class="fas fa-check"></i> 500+ edited images</li>
                            <li><i class="fas fa-check"></i> Online gallery</li>
                            <li><i class="fas fa-check"></i> USB drive</li>
                            <li><i class="fas fa-check"></i> Engagement session</li>
                        </ul>
                        <a href="/Home/Contact" class="btn btn-primary w-100">Choose Package</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="package-card h-100">
                    <div class="package-header">
                        <h3>Luxury</h3>
                        <div class="package-price">$4,500</div>
                    </div>
                    <div class="package-body">
                        <ul class="package-features">
                            <li><i class="fas fa-check"></i> 10 hours coverage</li>
                            <li><i class="fas fa-check"></i> 2 photographers</li>
                            <li><i class="fas fa-check"></i> 700+ edited images</li>
                            <li><i class="fas fa-check"></i> Online gallery</li>
                            <li><i class="fas fa-check"></i> USB drive</li>
                            <li><i class="fas fa-check"></i> Engagement session</li>
                            <li><i class="fas fa-check"></i> Wedding album</li>
                        </ul>
                        <a href="/Home/Contact" class="btn btn-outline-primary w-100">Choose Package</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8" data-aos="fade-up">
                <h2 class="mb-4">Ready to Begin Your Journey?</h2>
                <p class="lead mb-4">
                    Let's discuss your vision and create a photography experience that exceeds your expectations.
                </p>
                <a href="/Home/Contact" class="btn btn-light btn-lg">Book Your Session</a>
            </div>
        </div>
    </div>
</section>
