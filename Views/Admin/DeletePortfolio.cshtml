@model Portfolio
@{
    ViewData["Title"] = "Delete Portfolio Item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Delete Portfolio Item</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/Admin/Portfolios" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Portfolio
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <strong>Warning:</strong> This action cannot be undone. Are you sure you want to delete this portfolio item?
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded mb-3" style="max-height: 200px; width: 100%; object-fit: cover;">
                    </div>
                    <div class="col-md-8">
                        <h4>@Model.Title</h4>
                        <p class="text-muted">@Model.Description</p>
                        <p><strong>Category:</strong> <span class="badge bg-secondary">@Model.Category</span></p>
                        <p><strong>Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                        @if (Model.IsFeatured)
                        {
                            <p><span class="badge bg-warning text-dark">Featured Item</span></p>
                        }
                    </div>
                </div>

                <hr>

                <form asp-action="DeletePortfolio" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="d-flex justify-content-between">
                        <a href="/Admin/Portfolios" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Portfolio Item
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
